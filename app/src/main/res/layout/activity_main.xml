<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoSaludo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/coffeeCat"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        app:srcCompat="@mipmap/coffee_cat"/>

    <TextView
        android:id="@+id/dameNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dame tu nombre."
        android:textSize="32sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/editNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text=""/>

    <Button
        android:id="@+id/botoncito"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="PresiÃ³name"
        android:visibility="gone"
        android:textSize="20sp"
        android:padding="16dp"
        android:background="@drawable/boton_redondeado"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/textoSaludo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/botonReiniciar"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="Reiniciar"
        android:visibility="gone"
        android:textSize="20sp"
        android:padding="16dp"
        android:background="@drawable/boton_redondeado"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/textoSaludo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
